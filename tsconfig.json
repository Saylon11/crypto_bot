{
  "compilerOptions": {
    "target": "ES2020", // Adjusted to support ESM
    "module": "Node16", // Updated to support ESM
    "moduleResolution": "node16", // Ensures proper resolution for ESM
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "expo-solana-wallet"]
}
