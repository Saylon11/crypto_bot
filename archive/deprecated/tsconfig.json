{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node", 
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "diagnostic.js", "src/core/smartTrader.js"],
  "exclude": [
    "node_modules",
    "dist",
    "expo-solana-wallet", 
    "src/core/smartTrader.js",
    "src/scanners/tokenHunter.ts"
  ]
}
